<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <searchEverywhereContributor
                implementation="io.github.zjay.plugin.fastrequest.contributor.FastRequestGotoContributor$Factory"/>
        <!-- Add your extensions here -->
        <applicationService serviceImplementation="io.github.zjay.plugin.fastrequest.service.GeneratorUrlService"/>
        <applicationService
                serviceImplementation="io.github.zjay.plugin.fastrequest.generator.impl.JaxRsGenerator"/>
        <applicationService
                serviceImplementation="io.github.zjay.plugin.fastrequest.generator.impl.SpringMethodUrlGenerator"/>
        <applicationService
                serviceImplementation="io.github.zjay.plugin.fastrequest.generator.impl.DubboMethodGenerator"/>
        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="io.github.zjay.plugin.fastrequest.view.linemarker.JavaLineMarkerProvider"/>

        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="io.github.zjay.plugin.fastrequest.view.linemarker.DubboLineMarkerProvider"/>
    </extensions>
    <actions>
        <!-- Add your actions here -->
        <group id="generateUrlAndParamFree" text="QuickRequest" description="QuickRequest" popup="true" icon="quickRequest.icons.PluginIcons.fastRequest_toolwindow">
            <separator/>
            <group id="generateSubGroupFree"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <add-to-group group-id="EditorPopupMenu" anchor="first" />
            <action id="quickRequest.generatorMethod" class="io.github.zjay.plugin.fastrequest.action.GenerateMethodAction"
                    text="Generate Spring Method"
                    description="Generate spring method">
                <keyboard-shortcut keymap="$default" first-keystroke="alt BACK_SLASH"/>
            </action>
        </group>

        <action id="quickRequest.gotoFastRequest"
                class="io.github.zjay.plugin.fastrequest.action.GotoFastRequestAction">
            <keyboard-shortcut first-keystroke="alt F" keymap="$default"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="QuickRequest">
        <requestMappingContributor
                implementation="io.github.zjay.plugin.fastrequest.contributor.JavaRequestMappingContributor"/>
    </extensions>

</idea-plugin>